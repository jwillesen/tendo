{
  "name": "tendo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@material-ui/core": "^4.11.4",
    "@material-ui/lab": "^4.0.0-alpha.58",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "eslint-plugin-formatjs": "^2.15.3",
    "graphql": "^15.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.18.1",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "concurrently -k yarn:start:*",
    "start:client": "craco start",
    "start:server": "json-graphql-server db/db.js --p 4000",
    "build": "craco build",
    "build:check": "tsc --noEmit",
    "test": "craco test",
    "test:nowatch": "yarn test --watchAll=false",
    "lint": "eslint src",
    "checks": "yarn lint && yarn build:check && yarn test:nowatch",
    "intl:extract": "formatjs extract 'src/**/*.ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "gql:schema": "npx apollo client:download-schema --endpoint=http://localhost:4000/graphql schema.graphql",
    "eject": "react-scripts eject"
  },
  "proxy": "http://localhost:4000",
  "prettier": {
    "semi": false,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "formatjs"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@formatjs/cli": "^4.2.16",
    "babel-plugin-formatjs": "^10.2.15",
    "concurrently": "^6.2.0",
    "json-graphql-server": "^2.2.3",
    "prettier": "^2.3.0"
  }
}
